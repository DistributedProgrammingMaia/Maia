<div class="card">
    <div class="card-header">
        <h5>Personal Profile</h5>


    </div>
    <div class="card-block">
        <form>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">First Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control"
                           placeholder="John">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Last Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control"
                           placeholder="Doe">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Birthdate</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control"
                           placeholder="20/06/1991">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Sex</label>
                <div class="col-sm-10">
                    <select name="select" class="form-control">
                        <option value="opt2">Male</option>
                        <option value="opt3">Female</option>
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Profession</label>
                <div class="col-sm-10">
                    <select name="select" class="form-control">
                        <option value="opt2">Optometrist</option>
                        <option value="opt3">Ophthalmologist</option>
                        <option value="opt3">Opticians</option>
                    </select>
                </div>
            </div>


            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">

                    <button class="btn btn-primary">Update</button>

                </div>

            </div>


        </form>

    </div>
</div>